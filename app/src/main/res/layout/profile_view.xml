<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="222sp">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/avatar"
            android:scaleType="center"
            android:alpha="0.1"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:background="@color/gray"
            android:alpha="0.1"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/back_black"
            android:id="@+id/back"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/center"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                app:civ_border_color="@color/white_color"
                app:civ_border_width="6dp"
                android:id="@+id/userimage"
                android:src="@drawable/avatar"
                android:layout_height="80dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="19dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="kkkk kkkkk"
                android:id="@+id/username"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_below="@+id/center"
            android:layout_marginTop="20dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/containerPoint"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor = "@color/graytext"
                    android:text="@string/points_title"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="50sp"
                    android:visibility="gone"
                    android:id="@+id/bottomLinePoint"
                    android:background="@color/colorAccent"
                    android:layout_height="2sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/containerProfile"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor = "@color/graytext"
                    android:text="@string/profile_title_info"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="50sp"
                    android:id="@+id/bottomLineProfile"
                    android:background="@color/colorPrimaryDark"
                    android:layout_height="2sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:id="@+id/containerMarket"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:textColor = "@color/graytext"
                    android:text="@string/market_title_info"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="50sp"
                    android:background="@color/moov_color"
                    android:id="@+id/bottomLineMarket"
                    android:visibility="gone"
                    android:layout_height="2sp"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <include layout="@layout/profile_tab" android:id="@+id/containerViewProfile" />
    <include layout="@layout/market_tab_tab" android:id="@+id/containerViewMarket" />
    <include layout="@layout/points_tab" android:id="@+id/containerViewPoint" />
</LinearLayout>