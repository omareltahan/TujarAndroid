<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#CE6FD9"
    app:cardCornerRadius="16dp"
    android:layout_margin="12dp"
    android:id="@+id/container"
    android:layout_height="120dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/hijjab"
            android:id="@+id/image"
            android:layout_margin="12sp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/seperateline"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:src="@drawable/hijjab"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:gravity="end"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="28dp"
                android:textStyle="bold"
                android:text="حجاب اسلامي"
                android:id="@+id/Title"
                android:textColor="@color/white_color"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:maxLines="1"
                android:id="@+id/Desc"
                android:text = "كل اشكال وخامات الحجاب الاسلامي"
                android:textColor="@color/white_color"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="15sp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:id="@+id/CountMarkets"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text = "@string/count_markets"
                        android:textColor="@color/white_color"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:id="@+id/CountOrders"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:text = "@string/count_orrders"
                        android:textColor="@color/white_color"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>